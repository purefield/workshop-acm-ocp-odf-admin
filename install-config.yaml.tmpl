apiVersion: v1
metadata:
  name: 'CLUSTERNAME
baseDomain: amz.box--eng.com
controlPlane:
  hyperthreading: Enabled
  name: master
  replicas: 3
  platform:
    aws:
      rootVolume:
        iops: 4000
        size: 100
        type: io1
      type: m5.xlarge
compute:
- hyperthreading: Enabled
  name: 'worker'
  replicas: WORKER_NODES
  platform:
    aws:
      rootVolume:
        iops: 2000
        size: 100
        type: io1
      type: m5.xlarge
- hyperthreading: Enabled
  name: 'infra'
  replicas: INFRA_NODES
  platform:
    aws:
      rootVolume:
        iops: 2000
        size: 100
        type: io1
      type: i3.2xlarge
networking:
  networkType: OpenShiftSDN
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  machineNetwork:
  - cidr: 10.0.0.0/16
  serviceNetwork:
  - 172.30.0.0/16
platform:
  aws:
    region: us-east-2
pullSecret: "" # skip, hive will inject based on it's secrets
sshKey: |-
    SSH_PUB_KEY
